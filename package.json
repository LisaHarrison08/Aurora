{
  "name": "aurora",
  "version": "1.0.0",
  "description": "all things wine",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "clean": "rimraf dist",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "imagemin": "imagemin img/* -o dist/img",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "usemin": "usemin contactus.html -d dist --htmlmin -o dist/contactus.html && usemin aboutus.html -d dist --htmlmin -o dist/aboutus.html && usemin index.html -d dist --htmlmin -o dist/index.html && usemin events.html -d dist --htmlmin -o dist/events.html && usemin club.html -d dist --htmlmin -o dist/club.html && usemin tours.html -d dist --htmlmin -o dist/tours.html",
    "watch:scss": "onchange 'css/*.scss' -- npm run scss",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LisaHarrison08/Aurora.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LisaHarrison08/Aurora/issues"
  },
  "homepage": "https://github.com/LisaHarrison08/Aurora#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "imagemin-cli": "^5.1.0",
    "lite-server": "^2.6.1",
    "node-sass": "^6.0.1",
    "onchange": "^7.0.0",
    "parallelshell": "3.0.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-pro": "^5.15.4",
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.1.3",
    "ffmpeg": "0.0.4",
    "jquery": "^3.6.0",
    "usemin-cli": "^0.6.0"
  }
}
